<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7BFBDBD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:text="Siemens Hearing Aid"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"

       />
    <LinearLayout
        android:id="@+id/stars"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:layout_below="@+id/title"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp">


        <ImageView
            android:id="@+id/star1"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_star_24"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:id="@+id/star2"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_star_24"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:id="@+id/star3"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_star_24"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:id="@+id/star4"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_star_24"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:id="@+id/star5"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_star_half_24"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="235 REVIEWS"
            android:textSize="19dp"
            android:textColor="#000"
            android:textStyle="normal"
            android:layout_gravity="center"

            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="110sp"
        android:layout_height="75sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_outline_share_24"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHARE"
            android:layout_below="@+id/share"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="400sp"
        android:layout_height="220sp"
        android:layout_below="@+id/stars"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/imagebg"
        android:elevation="5dp">

        <ImageView
            android:layout_width="350sp"
            android:layout_height="200sp"
            android:layout_centerInParent="true"
            android:src="@drawable/hearingimg" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/image11"
        android:layout_width="280sp"
        android:layout_height="60sp"
        android:layout_below="@+id/imageLayout"
        android:layout_centerInParent="true"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrowbg"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/images"
            android:src="@drawable/ic_round_arrow_circle_left_24"
           />
        <ImageView
            android:layout_width="15sp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/roundbalck"
            />
        <ImageView
            android:layout_width="15sp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/roundwhite"
            />
        <ImageView
            android:layout_width="70sp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="9dp"
            android:background="@drawable/linewhite"
            />

        <ImageView
            android:id="@+id/arrowbg1"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/images"
            android:src="@drawable/ic_round_arrow_circle_right_24"
            android:layout_marginLeft="18dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/type"
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:layout_below="@+id/image11"
        android:text="TYPE"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/optionImage"
        android:layout_width="match_parent"
        android:layout_height="95sp"
        android:layout_below="@+id/type"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        >
        <ImageView
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="@drawable/imagebg"
            android:layout_marginLeft="5dp"

            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/hearingimg"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="@drawable/imagebg"
            android:layout_marginLeft="15dp"

            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/hearingimg"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="@drawable/imagebg"
            android:layout_marginLeft="15dp"

            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/hearingimg"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="@drawable/imagebg"
            android:layout_marginLeft="15dp"

            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/hearingimg"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionText1"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_below="@+id/optionImage"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option1"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option2"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="28dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option3"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option4"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dolar"
        android:layout_width="280sp"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:layout_below="@id/optionText1"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_currency_rupee_24"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="200.00"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_currency_rupee_24"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="350.00"
            android:textSize="15dp"
            android:textColor="#000"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"/>
       <ImageView
           android:layout_width="30dp"
           android:layout_height="20dp"
           android:background="@drawable/ic_sharp_linear_scale_24"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="-50dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="SAVE 40%"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="#000"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/quantity"
        android:layout_width="280sp"
        android:layout_height="30sp"
        android:layout_below="@+id/dolar"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUANTITY"
            android:textSize="25dp"
            android:textColor="#000"
            android:textStyle="normal"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="25dp"
            android:text="01"
            android:background="@drawable/savebg"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            />
       <ImageView
           android:layout_width="50dp"
           android:layout_height="30dp"
           android:background="@drawable/downarrowbg"
           android:src="@drawable/ic_round_keyboard_arrow_down_24"
           android:layout_marginLeft="-14dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/quantity"
        android:background="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/buynowbg"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="BUY NOW"
        android:textSize="20dp"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="normal"/>
    </LinearLayout>








</RelativeLayout>